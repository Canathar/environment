[alias]

   # ==============================================================================================================================
   # --                                                   Checkout Aliases                                                       --
   # ==============================================================================================================================

   # Master Checkout Aliases
   main = checkout main
   master = checkout master

   # Development Checkout Aliases
   devel = checkout development

   # Integration Checkout Aliases
   int = checkout integration

   # Release Checkout Aliases
   prod = checkout production

   # Bugfix Checkout Aliases


   # Feature Checkout Aliases



   # ==============================================================================================================================
   # --                                                   Command Aliases                                                        --
   # ==============================================================================================================================

   # Command Aliases
   br = !"git branch"
   st = !"git status"



   # ==============================================================================================================================
   # --                                                     Diff Aliases                                                         --
   # ==============================================================================================================================

   # Diff Between Detail (Diff Aliases)
   dbddev  = !"git diff devel..."


   # Diff Between (Diff Aliases)
   dbdev   = !"git diff --name-only development..."
   dbmast  = !"git diff --name-only master..."



   # ==============================================================================================================================
   # --                                                   Logging Aliases                                                        --
   # ==============================================================================================================================

   # ===== Logging Format Strings =====
   # See: man git log (search for format:<string> and search for PRETTY)

   # Single Line Minimal               -- abv commit hash --  ---- subject ----  ----- author name -----   -- ref names --
   lgslm-fmt = log --format=format:'%C(bold blue)%h%Creset - %C(white)%s%Creset %C(dim white) - %an%Creset%C(auto)%d%Creset'

   # Single Line Short               -- abv commit hash --    ------------------ relative auth date ------------------   ---- subject ----  ----- author name -----   -- ref names --
   lgsls-fmt = log --format=format:'%C(bold blue)%h%Creset - %C(bold cyan)(auth: %C(bold green)%ar%C(bold cyan))%Creset %C(white)%s%Creset %C(dim white) - %an%Creset%C(auto)%d%Creset'

   # Single Line Long                -- abv commit hash --    --------------- RFC2822 auth date / relative auth date ---------------   ---- subject ----  ----- author name -----   -- ref names --
   lgsll-fmt = log --format=format:'%C(bold blue)%h%Creset - %C(bold cyan)(auth: %aD%Creset -  %C(bold green)%ar%C(bold cyan))%Creset %C(white)%s%Creset %C(dim white) - %an%Creset%C(auto)%d%Creset'

   # Multi-Line Short                -- abv commit hash --    ------------------ relative auth date ------------------  -- ref names -- -nl-    ---- subject ----  ----- author name -----  -nl-
   lgmls-fmt = log --format=format:'%C(bold blue)%h%Creset - %C(bold cyan)(auth: %C(bold green)%ar%C(bold cyan))%Creset%C(auto)%d%Creset%n     %C(white)%s%Creset %C(dim white) - %an%Creset%n'

   # Multi-Line Long                 -- abv commit hash --    --------------- RFC2822 auth date / relative auth date ---------------  -- ref names -- -nl-    ---- subject ----  ----- author name -----  -nl-
   lgmll-fmt = log --format=format:'%C(bold blue)%h%Creset - %C(bold cyan)(auth: %aD%Creset -  %C(bold green)%ar%C(bold cyan))%Creset%C(auto)%d%Creset%n     %C(white)%s%Creset %C(dim white) - %an%Creset%n'


   # ====== Logging Aliases
   lgslm = !"git lgslm-fmt --decorate"
   lgsls = !"git lgsls-fmt --graph --decorate --all"
   lgsll = !"git lgsll-fmt --graph --decorate --all"
   lgmls = !"git lgmls-fmt --graph --decorate --all"
   lgmll = !"git lgmll-fmt --graph --decorate --all"



   # ==============================================================================================================================
   # --                                                File Tracking Aliases                                                     --
   # ==============================================================================================================================

   # Command To Show What Files Are In The Index, But Updates Are Not Tracked
   trk-ls = !"git ls-files -v . | grep ^S"



[color]

   interactive = true
   status = true
   ui = true



[core]

   eol = lf
   safecrlf = true
   editor = vim



[diff]

   tool = bc5



[difftool]

   prompt = false


[merge]

   # ===== Beyond Compare =====
   #tool = bc3

   # ===== vim in diff mode =====
   tool = vimdiff



